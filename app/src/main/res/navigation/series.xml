<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/series"
            app:startDestination="@id/seriesScreen">

    <fragment
            android:id="@+id/seriesScreen"
            android:name="com.rappi.moviesdb.presentation.series.SeriesFragment"
            tools:layout="@layout/fragment_movies">
        <action
                android:id="@+id/action_series_to_serie_detail"
                app:destination="@id/serieDetailScreen"/>
    </fragment>

    <fragment
            android:id="@+id/serieDetailScreen"
            android:name="com.rappi.moviesdb.presentation.series.SerieDetailFragment"
            tools:layout="@layout/fragment_serie_detail">
        <argument
                android:name="movie"
                app:argType="com.rappi.moviesdb.domain.series.Serie"/>
    </fragment>

</navigation>